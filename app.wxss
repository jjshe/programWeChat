/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.clear{clear:both;}
page{font-family: "Microsoft YaHei";}
.mz_sm{font-size: 20rpx;line-height: 40rpx;color: #fff;background: #999;text-align: center;}

/* 列表 */
.con_list {background: #fff;}
.con_list {border-bottom: 2rpx dashed #f0f0f0;padding: 30rpx;}
.con_list .con_img {width: 200rpx;height: 200rpx;float: left;}
.con_list .con_con {float: right;width: 450rpx;}
.con_list .con_con .c_name {font-size: 34rpx;color: #000;float: left;}
.con_list .con_con .c_money {height:60rpx;overflow: hidden; display: block;font-size: 28rpx;color: #fd3232;line-height: 60rpx;}
.con_list .con_con .c_sum {display: block;font-size: 22rpx;color: #666;line-height: 40rpx;height: 80rpx;overflow: hidden;}
.con_list .con_con .yz_img image {display: inline-block;width: 40rpx;height: 40rpx;margin: 2rpx 10rpx;}
.con_list .con_con .yz_img {float: left;}
.con_list .con_con .yz_img image.hongbao_true {display: inline-block;}
.con_list .con_con .yz_img image.hongbao_false {display: none;}
.con_list .con_con .yz_img image.fanxian_true {display: inline-block;}
.con_list .con_con .yz_img image.fanxian_false {display: none;}
.con_list .con_con .yz_img image.refund_true {display: inline-block;}
.con_list .con_con .yz_img image.refund_false {display: none;}