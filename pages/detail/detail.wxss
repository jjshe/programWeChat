.pp_info {background: #fff;padding: 30rpx;}
.pp_info .info_name {display: block;line-height: 60rpx;font-size: 35rpx;color: #000;}
.pp_info .info_money {display: block;line-height: 60rpx;font-size: 28rpx;color: #666;float: left;}
.pp_info .info_money text {color: #fd3232;}
.pp_info .info_address {float: right;line-height: 60rpx;font-size: 28rpx;color: #666;}
.pp_info .info_address image {width: 28rpx;height: 28rpx;}
.pp_info .info_zhizi {line-height: 60rpx;font-size: 28rpx;color: #666;display: block;float: left;}
.pp_info .info_tu {display: inline-block;}
.pp_info .info_tu image {width: 30rpx;height: 30rpx;margin: 15rpx 10rpx;}
.pp_info .info_md {float: right;line-height: 60rpx;font-size: 28rpx;color: #666;}

.pp_rec {margin: 20rpx 0;background: #fff;}
.pp_rec .rec_tit {line-height: 70rpx;color: #000;font-size: 28rpx;padding: 0 30rpx;position: relative;display: block;border-bottom: 2rpx solid #dedede;}
.pp_rec .rec_tit::after {height: 4rpx;width: 80rpx;position: absolute;bottom: 0;background: #fd3232;content: "";left: 46rpx;}
.pp_rec .rec_zs {line-height: 50rpx;color: #666;font-size: 25rpx;display: inline-block;padding-left: 30rpx;}
.pp_rec image {line-height: 50rpx;height: 25rpx;display: inline-block;width: 140rpx;}
.pp_rec .con {padding: 30rpx 30rpx;font-size: 25rpx;color: #333;overflow: hidden;}

.ly_foot {width: 750rpx;height: 100rpx;position: fixed;bottom: 0;}
.ly_foot .wy_ly {width: 50%;float: left;background: #f93;height: 100rpx;text-align: center;}
.ly_foot .zx_zx {width: 50%;float: right;background: #df2e30;height: 100rpx;text-align: center;}
.ly_foot .wy_ly image {width: 50rpx;height: 50rpx;}
.ly_foot .wy_ly text {font-size: 22rpx;line-height: 30rpx;display: block;color: #fff;}
.ly_foot .zx_zx image {width: 50rpx;height: 50rpx;}
.ly_foot .zx_zx text {font-size: 22rpx;line-height: 30rpx;display: block;color: #fff;}

.c_more {line-height: 90rpx;text-align: center;border-top: 2rpx solid #ececec;}
.c_more image {width: 20rpx;height: 10rpx;}


